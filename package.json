{
  "name": "cansat-icarus-ui",
  "version": "1.0.3",
  "engines": {
    "node": ">=6.0"
  },
  "scripts": {
    "start": "polymer serve",
    "lint": "polymer lint; xo",
    "test": "npm run lint",
    "serve": "polymer serve",
    "build": "polymer build"
  },
  "private": true,
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-json": "^1.2.0",
    "polymer-cli": "^0.18.1",
    "xo": "^0.18.1"
  },
  "xo": {
    "plugins": [
      "html",
      "json"
    ],
    "extensions": [
      "html",
      "json"
    ],
    "esnext": true,
    "env": "browser",
    "globals": [
      "Polymer",
      "App"
    ],
    "ignores": [
      "build/**"
    ],
    "semicolon": false,
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Polymer"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "index.html",
        "rules": {
          "unicorn/no-abusive-eslint-disable": 0
        }
      },
      {
        "files": "service-worker.js",
        "env": "serviceworker",
        "globals": [
          "toolbox"
        ]
      },
      {
        "files": "{package,bower}.json",
        "space": 2
      },
      {
        "files": "test/**",
        "envs": [
          "browser",
          "mocha"
        ],
        "globals": [
          "Polymer",
          "App",
          "WCT",
          "assert",
          "fixture",
          "a11ySuite"
        ]
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
