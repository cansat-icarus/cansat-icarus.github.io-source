{
  "name": "polymer-starter-kit-custom-build",
  "version": "0.0.0",
  "description": "A starting point for Polymer 1.0 custom build apps",
  "repository": {
    "type": "git",
    "url": "git@github.com:PolymerElements/generator-polymer-init-custom-build"
  },
  "license": "http://polymer.github.io/LICENSE.txt",
  "bugs": {
    "url": "https://github.com/PolymerElements/generator-polymer-init-custom-build/issues"
  },
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "start": "polymer serve",
    "lint": "xo; polymer lint",
    "test": "npm run lint; polymer test",
    "serve": "polymer serve",
    "build": "polymer build"
  },
  "private": true,
  "devDependencies": {
    "babel-preset-latest": "^6.16.0",
    "del": "^2.2.1",
    "eslint-plugin-html": "^1.5.3",
    "eslint-plugin-json": "^1.2.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-if": "^2.0.1",
    "gulp-imagemin": "^3.0.1",
    "merge-stream": "^1.0.0",
    "plylog": "^0.4.0",
    "polymer-build": "^0.4.0",
    "xo": "git://github.com/addobandre/xo.git#more_extensions"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "xo": {
    "plugins": [
      "html",
      "json"
    ],
    "extensions": [
      "html",
      "json"
    ],
    "esnext": true,
    "env": "browser",
    "globals": [
      "Polymer",
      "App"
    ],
    "ignores": [
      "build/**"
    ],
    "semicolon": false,
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Polymer"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "index.html",
        "rules": {
          "unicorn/no-abusive-eslint-disable": 0
        }
      },
      {
        "files": "service-worker.js",
        "env": "serviceworker",
        "globals": [
          "toolbox"
        ]
      },
      {
        "files": "{package,bower}.json",
        "space": 2
      },
      {
        "files": "test/**",
        "envs": [
          "browser",
          "mocha"
        ],
        "globals": [
          "Polymer",
          "App",
          "WCT",
          "assert",
          "fixture",
          "a11ySuite"
        ]
      }
    ]
  }
}
