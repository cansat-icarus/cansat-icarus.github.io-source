{
  "version": "0.0.0",
  "name": "cansat-icarus-ui",
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "start": "polymer serve",
    "lint": "xo; polymer lint",
    "test": "npm run lint; polymer test",
    "serve": "polymer serve",
    "build": "polymer build"
  },
  "private": true,
  "devDependencies": {
    "babel-preset-env": "^1.3.2",
    "cz-conventional-changelog": "^2.0.0",
    "del": "^2.2.1",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-json": "^1.2.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-babel": "^6.1.2",
    "gulp-clean-css": "^3.0.4",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.2.0",
    "gulp-uglify": "^2.1.2",
    "merge-stream": "^1.0.1",
    "plylog": "^0.5.0",
    "polymer-build": "^0.9.1",
    "xo": "^0.18.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4,
            "browsers": [
              "last 2 versions",
              "> 1% in PT",
              "> 5%",
              "safari > 8"
            ]
          },
          "modules": "umd"
        }
      ]
    ]
  },
  "xo": {
    "plugins": [
      "html",
      "json"
    ],
    "extensions": [
      "html",
      "json"
    ],
    "esnext": true,
    "env": "browser",
    "globals": [
      "Polymer",
      "App"
    ],
    "ignores": [
      "build/**"
    ],
    "semicolon": false,
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Polymer"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "index.html",
        "rules": {
          "unicorn/no-abusive-eslint-disable": 0
        }
      },
      {
        "files": "service-worker.js",
        "env": "serviceworker",
        "globals": [
          "toolbox"
        ]
      },
      {
        "files": "{package,bower}.json",
        "space": 2
      },
      {
        "files": "test/**",
        "envs": [
          "browser",
          "mocha"
        ],
        "globals": [
          "Polymer",
          "App",
          "WCT",
          "assert",
          "fixture",
          "a11ySuite"
        ]
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
